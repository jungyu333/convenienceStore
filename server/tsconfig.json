{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types"],
    "strict": true,

    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true
  },
  "ts-node": {
    "files": true
  }
}
